{
	// File Associations
	"files.associations": {
		"*.mjs": "javascript",
		"*.cjs": "javascript"
	},

	// File Exclusions
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/node_modules": false,
		"**/dist": true,
		"**/build": true,
		"**/*.tsbuildinfo": true
	},

	// Search Exclusions
	"search.exclude": {
		"**/node_modules": true,
		"**/dist": true,
		"**/build": true,
		"**/coverage": true,
		"package-lock.json": true,
		"**/*.tsbuildinfo": true
	},

	// File Watcher Exclusions
	"files.watcherExclude": {
		"**/node_modules/**": true,
		"**/dist/**": true,
		"**/build/**": true,
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true
	},

	// Auto Save
	"files.autoSave": "onFocusChange",

	// Format on Save
	"editor.formatOnSave": true,

	// Code Actions on Save
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.fixAll.markdownlint": "explicit",
		"source.organizeImports": "never"
	},

	// Default Formatters
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	// TypeScript Settings
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"typescript.preferences.importModuleSpecifier": "relative",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.suggest.autoImports": true,
	"typescript.preferences.quoteStyle": "double",

	// JavaScript Settings
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.suggest.autoImports": true,
	"javascript.preferences.quoteStyle": "double",

	// ESLint Settings
	"eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
	"eslint.format.enable": false,
	"eslint.codeActionsOnSave.rules": null,

	// Editor Settings
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.rulers": [160],
	"editor.wordWrap": "off",
	"editor.quickSuggestions": {
		"other": true,
		"comments": false,
		"strings": true
	},
	"editor.suggest.snippetsPreventQuickSuggestions": false,
	"editor.suggestSelection": "first",
	"editor.inlineSuggest.enabled": true,
	"editor.bracketPairColorization.enabled": true,
	"editor.guides.bracketPairs": "active",

	// Terminal Settings
	"terminal.integrated.scrollback": 10000,
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.defaultProfile.windows": "PowerShell",

	// Deep Purple Dark Theme Customizations
	"workbench.colorCustomizations": {
		// Terminal Colors (Deep Purple Theme)
		"terminal.ansiBlack": "#0d0618",
		"terminal.ansiRed": "#d946ef",
		"terminal.ansiGreen": "#a855f7",
		"terminal.ansiYellow": "#c084fc",
		"terminal.ansiBlue": "#7c3aed",
		"terminal.ansiMagenta": "#a855f7",
		"terminal.ansiCyan": "#8b5cf6",
		"terminal.ansiWhite": "#e9d5ff",
		"terminal.ansiBrightBlack": "#2d1b4e",
		"terminal.ansiBrightRed": "#e879f9",
		"terminal.ansiBrightGreen": "#c084fc",
		"terminal.ansiBrightYellow": "#d8b4fe",
		"terminal.ansiBrightBlue": "#9333ea",
		"terminal.ansiBrightMagenta": "#c084fc",
		"terminal.ansiBrightCyan": "#a78bfa",
		"terminal.ansiBrightWhite": "#f3e8ff",
		"terminal.foreground": "#e9d5ff",
		"terminal.background": "#0d0618",

		// Editor Colors (Deep Purple)
		"editor.background": "#1a0d2e",
		"editor.foreground": "#e9d5ff",
		"editor.lineHighlightBackground": "#2d1b4e",
		"editor.selectionBackground": "#6b21a888",
		"editor.inactiveSelectionBackground": "#6b21a844",
		"editorCursor.foreground": "#a855f7",
		"editorLineNumber.foreground": "#4a2c6d",
		"editorLineNumber.activeForeground": "#a855f7",
		"editorIndentGuide.background1": "#2d1b4e",
		"editorIndentGuide.activeBackground1": "#4a2c6d",
		"editorWhitespace.foreground": "#2d1b4e",

		// Scrollbar (Deep Purple)
		"scrollbar.shadow": "#0d0618",
		"scrollbarSlider.background": "#4a2c6d88",
		"scrollbarSlider.hoverBackground": "#6b21a8aa",
		"scrollbarSlider.activeBackground": "#7c3aedcc",

		// Minimap (File Preview on Right)
		"minimap.background": "#0d0618",
		"minimap.selectionHighlight": "#6b21a888",
		"minimap.errorHighlight": "#d946ef",
		"minimap.warningHighlight": "#c084fc",
		"minimapSlider.background": "#4a2c6d66",
		"minimapSlider.hoverBackground": "#6b21a888",
		"minimapSlider.activeBackground": "#7c3aedaa",

		// Bracket Pair Colors (Purple Shades)
		"editorBracketHighlight.foreground1": "#a855f7",
		"editorBracketHighlight.foreground2": "#c084fc",
		"editorBracketHighlight.foreground3": "#8b5cf6",
		"editorBracketHighlight.foreground4": "#a78bfa",
		"editorBracketHighlight.foreground5": "#d8b4fe",
		"editorBracketHighlight.foreground6": "#e879f9",

		// Activity Bar (Deep Purple)
		"activityBar.background": "#0d0618",
		"activityBar.foreground": "#a855f7",
		"activityBar.inactiveForeground": "#4a2c6d",
		"activityBar.border": "#2d1b4e",
		"activityBarBadge.background": "#a855f7",
		"activityBarBadge.foreground": "#0d0618",

		// Side Bar (Deep Purple)
		"sideBar.background": "#0d0618",
		"sideBar.foreground": "#e9d5ff",
		"sideBar.border": "#2d1b4e",
		"sideBarTitle.foreground": "#a855f7",
		"sideBarSectionHeader.background": "#1a0d2e",
		"sideBarSectionHeader.foreground": "#c084fc",

		// Status Bar (Deep Purple)
		"statusBar.background": "#0d0618",
		"statusBar.foreground": "#c084fc",
		"statusBar.border": "#2d1b4e",
		"statusBar.debuggingBackground": "#7c3aed",
		"statusBar.debuggingForeground": "#f3e8ff",
		"statusBar.noFolderBackground": "#0d0618",

		// Title Bar (Deep Purple)
		"titleBar.activeBackground": "#0d0618",
		"titleBar.activeForeground": "#a855f7",
		"titleBar.inactiveBackground": "#0d0618",
		"titleBar.inactiveForeground": "#4a2c6d",
		"titleBar.border": "#2d1b4e",

		// Tab Bar (The container that holds tabs)
		"editorGroupHeader.tabsBackground": "#0d0618",
		"editorGroupHeader.tabsBorder": "#2d1b4e",
		"editorGroupHeader.border": "#2d1b4e",
		"editorGroup.border": "#4a2c6d",

		// Tabs
		"tab.activeBackground": "#2d1b4e",
		"tab.activeForeground": "#a855f7",
		"tab.activeBorder": "#a855f7",
		"tab.activeBorderTop": "#a855f7",
		"tab.inactiveBackground": "#0d0618",
		"tab.inactiveForeground": "#6b21a8",
		"tab.border": "#2d1b4e",
		"tab.hoverBackground": "#1a0d2e",
		"tab.hoverForeground": "#c084fc",

		// Notifications
		"notificationCenter.border": "#7c3aed",
		"notifications.background": "#2d1b4e",
		"notifications.border": "#7c3aed",
		"notifications.foreground": "#e9d5ff",

		// Panel (Terminal, Output, etc.)
		"panel.background": "#0d0618",
		"panel.border": "#2d1b4e",
		"panelTitle.activeBorder": "#a855f7",
		"panelTitle.activeForeground": "#a855f7",
		"panelTitle.inactiveForeground": "#4a2c6d",

		// Buttons
		"button.background": "#7c3aed",
		"button.foreground": "#f3e8ff",
		"button.hoverBackground": "#9333ea",

		// Input Fields
		"input.background": "#2d1b4e",
		"input.border": "#4a2c6d",
		"input.foreground": "#e9d5ff",
		"inputOption.activeBorder": "#a855f7",
		"inputOption.activeBackground": "#6b21a844",

		// Lists and Trees
		"list.activeSelectionBackground": "#4a2c6d",
		"list.activeSelectionForeground": "#a855f7",
		"list.inactiveSelectionBackground": "#2d1b4e",
		"list.hoverBackground": "#2d1b4e",
		"list.focusBackground": "#4a2c6d",
		"list.focusForeground": "#c084fc",

		// Git Decorations (Softer, More Distinguishable Colors)
		"gitDecoration.modifiedResourceForeground": "#d4a373",
		"gitDecoration.deletedResourceForeground": "#c77b8f",
		"gitDecoration.untrackedResourceForeground": "#8fbc8f",
		"gitDecoration.ignoredResourceForeground": "#6b7280",
		"gitDecoration.conflictingResourceForeground": "#d8985f",
		"gitDecoration.addedResourceForeground": "#7ba895",
		"gitDecoration.stageModifiedResourceForeground": "#b8a06e",
		"gitDecoration.stageDeletedResourceForeground": "#b87082",
		"gitDecoration.submoduleResourceForeground": "#9ca3c4",

		// Dropdown
		"dropdown.background": "#2d1b4e",
		"dropdown.border": "#4a2c6d",
		"dropdown.foreground": "#e9d5ff",

		// Badges
		"badge.background": "#7c3aed",
		"badge.foreground": "#f3e8ff",

		// Progress Bar
		"progressBar.background": "#a855f7"
	},

	// Git Settings
	"git.enableSmartCommit": false,
	"git.confirmSync": false,
	"git.autofetch": true,

	// Emmet
	"emmet.includeLanguages": {
		"typescript": "html",
		"typescriptreact": "html"
	},

	// Theme
	"workbench.colorTheme": "Purple time"
}
