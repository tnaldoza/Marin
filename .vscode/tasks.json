				"clear": true,
				"focus": true
			}
		},
		{
			"label": "NPM: Audit Fix",
			"type": "shell",
			"command": "npm",
			"args": ["audit", "fix"],
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true,
				"focus": true
			}
		},
		{
			"label": "Full Check",
			"dependsOn": ["TypeScript: Type Check", "ESLint: Lint All", "Prettier: Check Formatting"],
			"dependsOrder": "parallel",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true,
				"focus": true
			},
			"group": "test"
		}
	]
